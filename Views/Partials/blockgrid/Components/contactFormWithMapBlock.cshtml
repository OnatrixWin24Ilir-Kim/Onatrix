@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>
@{
    var sectionLabel = Model.Content.Value<string>("sectionLabel");
    var headline = Model.Content.Value<string>("headline");
    var description = Model.Content.Value<string>("description");
    var mapEmbedCode = Model.Content.Value<string>("mapEmbedCode");
}

<section class="contact-form-map-section">
    @if (!string.IsNullOrEmpty(mapEmbedCode))
    {
        <div class="map-background">
            @Html.Raw(mapEmbedCode)
        </div>
    }
    
    <div class="form-overlay">
        <div class="container">
            <div class="form-container">
                @if (!string.IsNullOrEmpty(sectionLabel))
                {
                    <p class="section-label">@sectionLabel</p>
                }
                @if (!string.IsNullOrEmpty(headline))
                {
                    <h2>@headline</h2>
                }
                @if (!string.IsNullOrEmpty(description))
                {
                    <p class="description">@description</p>
                }
                
                <form class="contact-form-large" method="post">
                    <div class="form-row">
                        <div class="form-group">
                            <input type="text" name="name" placeholder="Name" required>
                        </div>
                        <div class="form-group">
                            <input type="tel" name="phone" placeholder="Phone" required>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <input type="email" name="email" placeholder="Email address" required>
                        </div>
                        <div class="form-group">
                            <select name="service" required>
                                <option value="">Financial consulting</option>
                                <option value="risk-management">Risk Management</option>
                                <option value="bonds">Bonds & Commodities</option>
                                <option value="assurance">Assurance & Audits</option>
                                <option value="tax">Tax and Trusts</option>
                                <option value="advisor">Financial Advisor</option>
                                <option value="statistics">Statistic Advisors</option>
                            </select>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</section>